<Window x:Class="Projeto_Pedidos_de_Produtos.ItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_Pedidos_de_Produtos"
        mc:Ignorable="d"
        Title="ItemWindow" Height="300" Width="800">
    <Grid>
        <TextBox x:Name="iditem" HorizontalAlignment="Left" Height="20" Margin="43,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="descricao" HorizontalAlignment="Left" Height="76" Margin="39,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="700"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="43,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116"><Run Language="pt-br" Text="Id do Item"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="41,87,0,0" Text="Descrição do Item" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Inserir Item" HorizontalAlignment="Center" Height="50" Margin="0,204,0,0" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
