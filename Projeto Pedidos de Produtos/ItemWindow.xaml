<Window x:Class="Projeto_Pedidos_de_Produtos.ItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_Pedidos_de_Produtos"
        mc:Ignorable="d"
        Title="ItemWindow" Height="300" Width="800">
    <Grid>
        <TextBox x:Name="iditem" HorizontalAlignment="Right" Height="20" Margin="0,0,607,227" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="150"/>
        <TextBox x:Name="descricao" HorizontalAlignment="Right" Height="76" Margin="0,0,61,100" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="700"/>
        <TextBlock HorizontalAlignment="Right" Height="20" Margin="0,0,641,248" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="116"><Run Language="pt-br" Text="Id do Item"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="41,87,0,0" Text="Descrição do Item" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="inseriritem" Content="Inserir Item" HorizontalAlignment="Center" Height="50" Margin="0,0,0,30" VerticalAlignment="Bottom" Width="300" Click="inseriritem_Click"/>
    </Grid>
</Window>
