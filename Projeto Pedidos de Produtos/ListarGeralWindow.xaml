<Window x:Class="Projeto_Pedidos_de_Produtos.ListarGeralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_Pedidos_de_Produtos"
        mc:Ignorable="d"
        Title="ListarGeralWindow" Height="850" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="210*"/>
            <RowDefinition Height="160*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListPedido" RenderTransformOrigin="0.526,0.552" Margin="86,103,84,270" Height="100" Width="730"/>
        <ListBox x:Name="ListItem" RenderTransformOrigin="0.526,0.552" Margin="85,270,85,103" Height="100" Width="730"/>
        <ListBox x:Name="ListProduto" RenderTransformOrigin="0.526,0.552" Margin="85,436,85,298" Height="100" Width="730" Grid.RowSpan="2"/>
        <TextBlock TextWrapping="Wrap" Margin="85,73,715,370" FontSize="22" RenderTransformOrigin="0.189,0.598" Height="30" Width="100"><Run Language="pt-br" Text="Pedidos"/></TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="86,238,714,205" FontSize="21" RenderTransformOrigin="0.189,0.598" Height="30" Width="100"><Run Language="pt-br" Text="Itens"/></TextBlock>
        <TextBlock TextWrapping="Wrap" Margin="86,403,714,40" FontSize="22" RenderTransformOrigin="0.189,0.598" Height="30" Width="100"><Run Language="pt-br" Text="Produtos"/></TextBlock>
        <Button x:Name="ListarButton" Content="Listar" HorizontalAlignment="Center" Height="40" Margin="0,229,0,0" VerticalAlignment="Top" Width="450" Click="ListarButton_Click" Grid.Row="1"/>
        <ListBox x:Name="listtotal" HorizontalAlignment="Center" Height="47" Margin="0,130,0,0" VerticalAlignment="Top" Width="730" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Height="29" Margin="86,100,0,0" Text="Total dos Pedidos" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" FontSize="21" Grid.Row="1"/>
    </Grid>
</Window>
