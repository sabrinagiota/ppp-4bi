        <TextBlock HorizontalAlignment="Left" Height="21" Margin="367,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59"><Run Language="pt-br" Text="Pedidos"/></TextBlock>
        <Button x:Name="vincular" Content="Adicionar Produto ao Pedido" HorizontalAlignment="Left" Height="50" Margin="428,273,0,0" VerticalAlignment="Top" Width="300" Click="vincular_Click"/>
        <Button x:Name="Listarclick" Content="Listar" HorizontalAlignment="Left" Height="30" Margin="429,332,0,0" VerticalAlignment="Top" Width="300" Click="Listarclick_Click"/>

    </Grid>
</Window>
