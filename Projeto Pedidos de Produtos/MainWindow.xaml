<Window x:Class="Projeto_Pedidos_de_Produtos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_Pedidos_de_Produtos"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="270">
    <Grid x:Name="excluir" Margin="3,0,-3,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="FazerPedido" Content="Inserir Novo Pedido" Margin="0,0,29,94" Grid.Column="1" Click="FazerPedido_Click" RenderTransformOrigin="0.389,0.519" HorizontalAlignment="Right" Width="220" Height="20" VerticalAlignment="Bottom"/>
        <Button x:Name="LevarpraListar" Content="Listar Cadastrados" HorizontalAlignment="Right" Margin="0,0,29,62" VerticalAlignment="Bottom" Width="220" Height="20" Click="LevarpraListar_Click" Grid.Column="1"/>
        <Button Content="Excluir" HorizontalAlignment="Right" Margin="0,0,109,19" VerticalAlignment="Bottom" Click="Button_Click" Width="60" Grid.Column="1" Height="20"/>
        <Button x:Name="atualizar" Content="Atualizar" HorizontalAlignment="Right" Margin="0,0,189,19" VerticalAlignment="Bottom" Click="atualizar_Click" Width="60" Grid.ColumnSpan="2" Height="20"/>
        <Button x:Name="inserirproduto" Content="Inserir Produto no Sistema" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="220" Click="inserirproduto_Click" Grid.Column="1" Margin="0,0,29,125"/>
        <Button x:Name="vincular" Content="Vincular" Grid.ColumnSpan="2" HorizontalAlignment="Right" Height="20" Margin="0,0,29,19" VerticalAlignment="Bottom" Width="60" Click="vincular_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.423"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.248"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
