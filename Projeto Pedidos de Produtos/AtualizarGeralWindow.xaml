<Window x:Class="Projeto_Pedidos_de_Produtos.AtualizarGeralWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_Pedidos_de_Produtos"
        mc:Ignorable="d"
        Title="AtualizarGeralWindow" Height="900" Width="850">
    <Grid Margin="0,10,0,0" RenderTransformOrigin="0.522,0.502">
        <Grid.RowDefinitions>
            <RowDefinition Height="355*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="863*"/>
        </Grid.RowDefinitions>
        <Button x:Name="attpedido" Content="Atualizar pedido" HorizontalAlignment="Center" VerticalAlignment="Top" Height="52" Width="296" FontSize="20" Click="attpedido_Click" Margin="0,187,0,0"/>
        <Button x:Name="attitem" Content="Atualizar item" HorizontalAlignment="Center" VerticalAlignment="Top" Height="52" Width="294" FontSize="20" Click="attitem_Click" Grid.Row="2" Margin="0,158,0,0"/>
        <Button x:Name="attproduto" Content="Atualizar produto" HorizontalAlignment="Center" Margin="0,478,0,0" VerticalAlignment="Top" Height="51" Width="294" FontSize="20" Click="attproduto_Click" Grid.Row="2"/>
        <TextBox x:Name="idpedidotext" HorizontalAlignment="Left" Margin="101,50,0,0" Text="Id do Pedido" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" FontSize="19"/>
        <TextBox x:Name="datacriacaotext" HorizontalAlignment="Left" Margin="101,117,0,0" Text="Data de Criação" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" FontSize="19" Height="32"/>
        <TextBox x:Name="dataenviotext" HorizontalAlignment="Left" Margin="367,115,0,0" Text="Data de Envio" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" FontSize="19" RenderTransformOrigin="0.466,0.619" Height="34"/>
        <TextBox x:Name="nomeusuariotext" HorizontalAlignment="Left" Margin="367,50,0,0" Text="Nome do Usuário" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" FontSize="19"/>
        <TextBox x:Name="statustext" HorizontalAlignment="Left" Margin="615,115,0,0" Text="Status do Pedido" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Height="34" FontSize="19"/>
        <TextBox x:Name="iditemtext" HorizontalAlignment="Left" Margin="97,83,0,0" Text="Id do Item" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" FontSize="19" Grid.Row="2"/>
        <TextBox x:Name="descricaotext" HorizontalAlignment="Left" Margin="359,83,0,0" Text="Descrição do Item" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" FontSize="19" Grid.Row="2"/>
        <TextBox x:Name="idprodutotext" HorizontalAlignment="Left" Margin="95,321,0,0" Text="Id do Produto" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Height="34" FontSize="19" Grid.Row="2"/>
        <TextBox x:Name="nomeprodutotext" HorizontalAlignment="Left" Margin="367,321,0,0" Text="Nome do Produto" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" FontSize="19" Grid.Row="2"/>
        <TextBox x:Name="fornecedortext" HorizontalAlignment="Left" Margin="95,393,0,0" Text="Fornecedor" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" FontSize="19" TextChanged="fornecedortext_TextChanged" Grid.Row="2"/>
        <TextBox x:Name="precotext" HorizontalAlignment="Left" Margin="363,393,0,0" Text="Preço" TextWrapping="Wrap" VerticalAlignment="Top" Width="178" Height="34" FontSize="19" RenderTransformOrigin="0.5,0.5" Grid.Row="2">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.415"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>

    </Grid>
</Window>
